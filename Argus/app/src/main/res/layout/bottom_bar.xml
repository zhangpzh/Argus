<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/left"
    android:layout_width="180dp"  android:layout_height="90dp"
    android:background="@drawable/bottom" >
    <com.floatdragon.argus.floatDragon_ui.float_circle.MoveButton
        android:id="@+id/bottom_top"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="16%"
        android:layout_centerHorizontal="true"
        app:layout_marginPercent="10%"/>
    <com.floatdragon.argus.floatDragon_ui.float_circle.SettingButton
        android:id="@+id/bottom_left"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="16%"
        android:layout_alignParentBottom="true"
        app:layout_marginPercent="5%"/>
    <com.floatdragon.argus.floatDragon_ui.float_circle.AppButton
        android:id="@+id/bottom_right"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="16%"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:layout_marginPercent="5%" />


    <com.floatdragon.argus.floatDragon_ui.float_circle.LockButton
        android:id="@+id/bottom_lt"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="16%"
        app:layout_marginLeftPercent="18%"        app:layout_marginTopPercent="33%" />

    <com.floatdragon.argus.floatDragon_ui.float_circle.NoteButton
        android:id="@+id/bottom_rt"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="16%"
        android:layout_alignParentRight="true"  android:layout_alignParentTop="true"
        app:layout_marginRightPercent="18%"        app:layout_marginTopPercent="33%" />

</android.support.percent.PercentRelativeLayout>