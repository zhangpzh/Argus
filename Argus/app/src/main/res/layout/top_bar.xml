<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left"
    android:layout_width="180dp"  android:layout_height="90dp"
    android:background="@drawable/top" >
    <com.floatdragon.argus.floatDragon_ui.MoveButton
        android:id="@+id/top_bottom"
        android:layout_width="20dip"    android:layout_height="20dp"
        android:layout_centerHorizontal="true"   android:layout_margin="10dip"
        android:layout_alignParentBottom="true" />
    <com.floatdragon.argus.floatDragon_ui.SettingButton
        android:id="@+id/top_left"
        android:layout_width="20dip"    android:layout_height="20dp"
        android:layout_alignParentTop="true"  android:layout_margin="10dip" />
    <com.floatdragon.argus.floatDragon_ui.AppButton
        android:id="@+id/top_right"
        android:layout_width="20dip"    android:layout_height="20dp"
        android:layout_alignParentTop="true"   android:layout_alignParentRight="true"
        android:layout_margin="10dip" />


    <com.floatdragon.argus.floatDragon_ui.LockButton
        android:id="@+id/top_lb"
        android:layout_width="20dip"    android:layout_height="20dp"
        android:layout_alignParentLeft="true"  android:layout_alignParentBottom="true"
        android:layout_marginLeft="44dp"        android:layout_marginBottom="35dp" />

    <com.floatdragon.argus.floatDragon_ui.NoteButton
        android:id="@+id/top_rb"
        android:layout_width="20dip"    android:layout_height="20dp"
        android:layout_alignParentRight="true"  android:layout_alignParentBottom="true"
        android:layout_marginRight="46dp"       android:layout_marginBottom="35dp" />

</RelativeLayout>