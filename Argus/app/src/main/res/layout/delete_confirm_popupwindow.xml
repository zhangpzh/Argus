<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="100dp"
    android:background="#F0F0F0F0">
    <TextView
        android:id="@+id/delete_confirm_textview"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Are you sure?"
        android:textColor="#C0000000"
        android:textSize="25dp"
        android:gravity="center" />
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/delete_confirm_textview">
        <Button
            android:id="@+id/delete_confirm_cancel"
            android:text="Cancel"
            android:textSize="20dp"
            android:textColor="#C0000000"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector" />
        <Button
            android:id="@+id/delete_confirm_confirm"
            android:text="Confirm"
            android:textSize="20dp"
            android:textColor="#C0000000"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector" />
    </RelativeLayout>
</RelativeLayout>